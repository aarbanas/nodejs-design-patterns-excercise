{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    "lib": ["es2017"],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strict": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "types"],
  }
}
